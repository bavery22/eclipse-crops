<?xml version="1.0" encoding="ISO-8859-1"?>
<template type="ProjTempl" version="1.0" supplier="Intel" revision="1.0" author="Zephyr contributors"
		copyright="Copyright (c) 2016 Intel Corporation and others. All rights reserved. This program and the accompanying materials are made available under the terms of the Eclipse Public License v1.0 which accompanies this distribution, and is available athttp://www.eclipse.org/legal/epl-v10.html"
		id="HelloWorldCProject-microkernel" label="%HelloWorld.CMicrokerneltemplate.label" description="%HelloWorld.CMicrokerneltemplate.description" help="help.html">

	<property-group id="basics" label="%HelloWorld.basics.label" description="%HelloWorld.basics.description" type="PAGES-ONLY" help="help.html">
		<property id="author"
			label="%HelloWorld.author.label"
			description="%HelloWorld.author.description"
			type="input"
			pattern=".*"
			default=""
			hidden="false"
			persist="true"/>
		<property id="copyright"
			label="%HelloWorld.copyright.label"
			description="%HelloWorld.copyright.description"
			type="input"
			pattern=".*"
			default="%HelloWorld.copyright.default"
			hidden="false"
			persist="true"/>
		<property id="message"
			label="%HelloWorld.message.label"
			description="%HelloWorld.message.description"
			type="input"
			pattern=".*"
			default="%HelloWorld.message.default"
			hidden="false"
			persist="true"/>
		<property id="sourceDir" label="%HelloWorld.sourceDir.label"
			description="%HelloWorld.sourceDir.description" type="input"
			default="%HelloWorld.sourceDir.default" pattern="[a-zA-Z0-9]+"
			mandatory="false" persist="true" hidden="true" />
		<property id="target" label="%HelloWorld.target.label"
			description="%HelloWorld.target.description" type="input"
			default="%HelloWorld.target.default" pattern=".*"
			mandatory="true" persist="true" hidden="false" />
		<property id="gitURI" label="%HelloWorld.gitURI.label"
			description="%HelloWorld.gitURI.description" type="input"
			default="%HelloWorld.gitURI.default" pattern=".*"
			mandatory="true" persist="true" hidden="false" />
		<property id="gitBranch" label="%HelloWorld.gitBranch.label"
			description="%HelloWorld.gitBranch.description" type="input"
			default="%HelloWorld.gitBranch.default" pattern=".*"
			mandatory="true" persist="true" hidden="false" />
		<property id="containerName" label="%HelloWorld.containerName.label"
			description="%HelloWorld.containerName.description" type="input"
			default="%HelloWorld.containerName.default" pattern=".*"
			mandatory="true" persist="true" hidden="false" />
	</property-group>
 	<process type="org.eclipse.cdt.core.CreateSourceFolder">
		<simple name="projectName" value="$(projectName)"/>
		<simple name="path" value="$(sourceDir)"/>
	</process>

	<process type="org.eclipse.cdt.core.AddFiles">
		<simple name="projectName" value="$(projectName)"/>
		<complex-array name="files">
			<element>
				<simple name="source" value="src/main.c"/>
				<simple name="target" value="$(sourceDir)/$(projectName).c"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="src/Makefile"/>
				<simple name="target" value="$(sourceDir)/Makefile"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="Makefile"/>
				<simple name="target" value="Makefile"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="prj.conf"/>
				<simple name="target" value="prj.conf"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="prj.mdef"/>
				<simple name="target" value="prj.mdef"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="README.txt"/>
				<simple name="target" value="README.txt"/>
				<simple name="replaceable" value="true"/>
			</element>
		</complex-array>
	</process>
	
	<!-- prefix is the bundle name, not the fully qualified class name -->
	<!-- Always triple check the spelling... there is no validation check -->
	<process type="org.yocto.crops.zephyr.ContainerGitCloneZephyrSourceFolder">
		<simple name="projectName" value="$(projectName)" />
		<simple name="target" value="$(target)" /> 
		<simple name="gitURI" value="$(gitURI)" />
		<simple name="gitBranch" value="$(gitBranch)" />
		<simple name="containerName" value="$(containerName)" />
	</process>
	
</template>
